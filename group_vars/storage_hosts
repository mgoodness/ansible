---
# file: group_vars/storage_hosts

lvm_volume_groups:
  - name: gluster0
    devices:
      - /dev/sdb
  - name: gluster1
    devices:
      - /dev/sdc

lvm_logical_volumes:
  - name: data
    vg: gluster0
    size: 1T
  - name: engine
    vg: gluster0
    size: 64G
  - name: data
    vg: gluster1
    size: 64G
  - name: engine
    vg: gluster1
    size: 1T
