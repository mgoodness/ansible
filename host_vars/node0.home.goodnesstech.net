---
# file: host_vars/node0.home.goodnesstech.net

ansible_ssh_host: 10.10.20.200

# this is temporary, pending resolution of https://github.com/ansible/ansible-modules-core/issues/1797
ansible_pkg_mgr: dnf

network_interfaces:
  - name: enp8s0
    address: 10.10.30.200/24
  - name: enp7s0
    address: 10.10.20.200/24
    gateway: 10.10.20.1
    dns:
      - 8.8.8.8
      - 8.8.4.4

raid_alerts_email: mgoodness@gmail.com
raid_devices:
  - device: /dev/md0
    level: 10
    components:
      - /dev/sdb
      - /dev/sdc
      - /dev/sdd
      - /dev/sde

lvm_volume_groups:
  - name: raid10
    devices:
      - /dev/md0

lvm_logical_volumes:
  - name: shared_data
    vg: raid10
    size: 2T
    filesystem: xfs
    mount_point: /srv/shared_data
    mount_options: defaults
    mount_passno: 0

samba_netbios_name: STORAGE
samba_workgroup: GOODNESSTECH
samba_shares:
  - name: shared
    path: /srv/shared_data
    public: 'yes'
    force_group: 'users'
    directory_mask: '0775'
    create_mask: '0764'
