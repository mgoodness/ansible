---
# file: host_vars/node0.goodnesstech.net

ansible_ssh_host: 10.10.20.200

network_interfaces:
  - name: enp8s0
    address: 10.10.30.200/24
  - name: enp7s0
    address: 10.10.20.200/24
    gateway: 10.10.20.1
    dns:
      - 8.8.8.8
      - 8.8.4.4

raid_alerts_email: mgoodness@gmail.com
raid_devices:
  - device: /dev/md0
    level: 10
    components:
      - /dev/sdc
      - /dev/sdd
      - /dev/sde
      - /dev/sdf

lvm_volume_groups:
  - name: raid10
    devices:
      - /dev/md0

lvm_logical_volumes:
  - name: ovirt_data
    vg: raid10
    size: 1T
    filesytem: ext4
    mount_point: /srv/ovirt_data
  - name: ovirt_engine
    vg: raid10
    size: 64G
    filesytem: ext4
    mount_point: /srv/ovirt_engine
